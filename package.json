{
  "name": "anp-stack",
  "version": "0.0.1",
  "description": "A boilerplate for building a server using Apollo Graphql + Nexus + Prisma and some other useful tools",
  "main": "build/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiweiii/ANP-stack.git"
  },
  "keywords": [
    "graphql",
    "server",
    "apollo",
    "prisma",
    "nexus",
    "postgres"
  ],
  "author": "qiweiii",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiweiii/ANP-stack/issues"
  },
  "homepage": "https://github.com/qiweiii/ANP-stack#readme",
  "scripts": {
    "ci:test": "yarn generate && yarn lint && yarn typecheck && yarn test",
    "db:migrate": "prisma migrate deploy",
    "dev": "cross-env NODE_ENV=development ts-node-dev --exit-child --tree-kill --respawn --transpile-only src/app.ts",
    "predev": "yarn db:migrate && yarn generate",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:nexus": "cross-env NODE_ENV=development ts-node --transpile-only src/graphql/schema",
    "generate:prisma": "prisma generate",
    "db:seed": "prisma db seed",
    "db:migrate-dev": "prisma migrate dev",
    "db:new-migration": "prisma migrate dev --name",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --fix --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf build",
    "pretest": "yarn db:migrate && yarn generate",
    "test:coverage": "jest --collect-coverage --ci --runInBand --detectOpenHandles --forceExit",
    "test:clear": "jest --clearCache",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:update": "jest --runInBand --updateSnapshot",
    "prestart": "node build/util/prepareDB.js",
    "start": "node build/app.js",
    "studio": "npx prisma studio"
  },
  "dependencies": {
    "@apollo/server": "4.3.0",
    "@as-integrations/koa": "0.2.1",
    "@koa/cors": "3.1.0",
    "@koa/router": "12.0.0",
    "@prisma/client": "4.5.0",
    "graphql": "16.6.0",
    "graphql-middleware": "6.1.31",
    "graphql-request": "3.5.0",
    "graphql-scalars": "1.10.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-router": "10.1.1",
    "nexus": "1.3.0",
    "prisma": "4.5.0",
    "source-map-support": "0.5.21",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "3.0.3",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^16.7.6",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.7.0",
    "typescript-snapshots-plugin": "1.7.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
